<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeTrackerApp2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="100"
            Padding="30,0"
            VerticalOptions="Center"
            HorizontalOptions="Center">

             <Label
                Text="Time Tracker App"
                FontAttributes="Italic"
                 Style="{StaticResource TitleLabelStyling}"/>

            <Image
                Source="https://www.pngmart.com/files/12/My-Neighbor-Totoro-Transparent-Background.png"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <HorizontalStackLayout
                Spacing="40"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                >

                 <Button
                x:Name="AddTaskBtn"
                Text=" Add Task "
                Clicked="AddTaskBtn_Clicked"/>

                  <Button
                x:Name="ViewTasksBtn"
                Text="View Tasks"
                Clicked="ViewTasksBtn_Clicked"/>


            </HorizontalStackLayout>
          

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

